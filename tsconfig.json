{
  "files": [
    "index.ts"
  ],
  "include": [
    "*.ts"
  ],
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "ES2019"
    ],
    "module": "commonjs",
    "noImplicitAny": true,
    "target": "es6",
    "experimentalDecorators": true,
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "*": [
        "node_modules/@types/*",
        "./server/types/*"
      ]
    }
  }
}